<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border_rectangle"
    android:padding="@dimen/dp_30">

    <TextView
        android:id="@+id/tv_time_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:text="Укажите время" />

    <TextView
        android:id="@+id/lbl_start_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Начальное:"
        android:textSize="20sp" />

    <TimePicker
        android:id="@+id/tp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/lbl_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Конечное:"
        android:textSize="20sp" />

    <TimePicker
        android:id="@+id/tp2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:timePickerMode="spinner" />

    <TextView
        android:id="@+id/tv_change_time_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/colorRed"
        android:visibility="invisible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_change_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="end"
        android:text="Далее" />
</LinearLayout>
